<%= form_for(@spot) do |f| %>
  
  <div class = "field">
    <%= f.label :picture %>
    <%= f.file_field :picture, placeholder:" 画像アップロード"%>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.time_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :last_admission_time %><br />
    <%= f.time_field :last_admission_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.time_field :end_time %>
  </div>

  <div class="field">
    <%= f.label :fee %><br />
    <%= f.number_field :fee %>
  </div>

  <div class="field">
    <%= f.label :parking %><br />
    <%= f.check_box "parking" %>
  </div>
  <%= f.submit "送信する" %>
<% end %>